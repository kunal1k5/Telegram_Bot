# =========================
# Core Bot Config
# =========================
BOT_TOKEN=your_bot_token_from_botfather
ADMIN_ID=123456789

# =========================
# AI Provider Config
# =========================
# Recommended primary AI
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=openai/gpt-4o-mini

# Optional fallback
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GEMINI_API_KEY=

# =========================
# Logging / Analytics Channel
# =========================
# Prefer LOG_CHANNEL_ID format: -100xxxxxxxxxx
LOG_CHANNEL_ID=
LOG_CHANNEL_USERNAME=@YourLogChannel
ENABLE_USAGE_LOGS=true

# =========================
# Voice Chat (VC) Assistant
# =========================
# Required for /vplay /vqueue /vskip /vstop
# Preferred dedicated VC credentials:
VC_API_ID=
VC_API_HASH=
# Fallback (if VC_* not provided):
API_ID=
API_HASH=
ASSISTANT_SESSION=

# =========================
# Optional Other
# =========================
OWNER_ID=
DOWNLOAD_DIR=downloads
START_STICKER_FILE_ID=
# =========================
# Start Panel Media (Optional)
# =========================
# Recommended in production: use Telegram file_id to avoid local file issues
START_PANEL_VIDEO_FILE_ID=
# Local fallback path (Linux case-sensitive)
START_PANEL_VIDEO_PATH=asset/video/Bot_Description_Photo_GIF_Upload.mp4
START_SUPPORT_URL=https://t.me/yoursupport
START_SOURCE_URL=https://github.com/yourrepo
